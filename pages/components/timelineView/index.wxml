<!-- 时间线组件 -->
<view class="timelineBox">
    <!-- 时间节点 -->
    <block wx:for="{{eventList}}" wx:for-item="eventItem" wx:key="eventIndex">
        <view class="timeline-event">
            <view class="timeline-left">
                <view class="iconfont iconSpot"></view>
                <view class="line"></view>
            </view>
            <view class="timeline-right">
                <text class="timeline-eventData">{{eventItem.time}}</text>
                <text class="timeline-eventName">{{eventItem.content}}</text>
            </view>
        </view>
    </block>
</view>
