.dct-myTeam__item, .dct-myTeam__item2 {
    width: 100%;
    margin: 20rpx 0;
    background-color: #fff;
    overflow: hidden;
}
/* 双创导师 */
.dct-myTeam__item {
    height: 240rpx;
    border-bottom: 2rpx solid #e0e0e0;
}
.dct-myTeam__logoBox {
    width: 220rpx;
    height: 220rpx;
    padding: 0 0 20rpx 20rpx;
}
.dct-myTeam__logoBox .dct-myTeam__logo {
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    background: #ccc;
}
/*  */
.dct-myTeam__mess {
    height: 100%;
    width: 430rpx;
    padding-left: 20rpx;
}
.dct-myTeam__mess .dct-myTeam__messTitle {
    margin-top: 20rpx;
    font-size: 32rpx;
}
.dct-myTeam__messPic{
    width: 100%;
}
.TeamMember {
    width: 400rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 24rpx;
}
/*  */
.dct-myTeam__messTip {
    font-size: 24rpx;
    margin: 30rpx 0;
}
.dct-myTeam__messTip .dct-messTip__title {
    margin-right: 20rpx;
}
.dct-myTeam__messTip .dct-messTip__content {
    color: #1AAD19;
}
/*  */
.dct-myTeam__item2 .dct-myTeam__messTip {
    height: 96rpx;
    /* 超出两行自动换行 */
    display: -webkit-box;
    -webkit-line-clamp: 3; /* 限制在一个块元素显示的文本的行数 */
    -webkit-box-orient: vertical; /* 垂直排列 */
    overflow: hidden;
    text-overflow: ellipsis;
    word-break:break-all;
    line-height: 1.4;
}