/* 团队详情 */
@import './template/tmt-template.wxss';
.tmt-content {
    position: relative;
    overflow: hidden;
    overflow-y: auto;
    padding: 0 20rpx;
    -webkit-overflow-scrolling: touch; /* ios下惯性滚动 */
}
.tmt-header {
    padding: 0 20rpx;
    height: 76rpx;
    line-height: 76rpx;
    font-size: 32rpx;
}
.tmt-header-title {
    flex: 1;
}
.height {
    height: 0;
    overflow: hidden;
}
.tmt-header-fold {
    margin-top: 8rpx;
    width: 60rpx;
}
/*  */
.tmt-membersBox {
    width: 100%;
    /* background-color: #e0e0e0; */
}
/* 团队项目简介 */
.tmt-project-introduce {
    font-size: 32rpx;
    line-height: 1.4;
}
.mgB20{
    position: relative;
    padding: 0 20rpx 10rpx;
    margin-bottom: 70rpx;
    box-shadow:0px 10px 20px 0 rgba(0, 0, 0, 0.2);
}
.mgB20::before {
    content: "";
    position: absolute;
    height: 50px;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: -2;
    box-shadow: 0 1px 1px rgba(0, 0, 0, 0.2),
                0 8px 0 -3px #f6f6f6,
                0 9px 1px -3px rgba(0, 0, 0, 0.2),
                0 16px 0 -6px #f6f6f6,
                0 17px 1px -6px rgba(0, 0, 0, 0.2);
}
/* 团队项目 */
.tmt-projectType {
    margin: 20rpx 0;
    width: 710rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 26rpx;
}
.tmt-projectName {
    color: #259B24;
}
/* 团队荣誉 */
.tmt-projectHonor {
    margin: 16rpx 0;
    width: 100%;
    padding: 0 20rpx;
    font-size: 28rpx;
    align-items: center;
}
.tmt-honor__name {
    margin: 0 16rpx;
}
/* 团队日志 */
.tmt-introduce-title {
    height: 66rpx;
    padding: 0 20rpx;
    /* background-color: #e0e0e0; */
    line-height: 66rpx;
}
.timeline {
    display: none;
}