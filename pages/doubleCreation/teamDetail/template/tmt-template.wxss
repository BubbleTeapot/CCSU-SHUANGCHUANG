/*  */
.tmt-memberBox {
    float: left;
    width: 295rpx;
    height: 120rpx;
    line-height: 120rpx;
    overflow: hidden;
    margin: 20rpx 20rpx;
    padding: 10rpx;
    border: 2rpx solid #ddd;
    border-radius:10rpx;
    box-sizing: border-box;
}
.tmt-memberImg {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}
.tmt-memberInfo {
    margin-left: 20rpx;
    font-size: 28rpx;
    line-height: 1.3;
}
.tmt-memberInfo__college {
    max-width: 200rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.tmt-memberInfo__job, .tmt-memberInfo__college {
    color: #999;
}


/* 我的项目 */
.dct-myProject__item  {
    max-height: 270rpx;
    min-height: 200rpx;
    padding: 0 20rpx;
    box-sizing:border-box;
}
.dct-myProject-header {
    height: 70rpx;
    font-size: 32rpx;
}
.dct-myProject-header .dct-header__title {
    flex: 1;
    height: 70rpx;
    line-height: 70rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.dct-myProject-header .dct-header__tip {
    margin-top: 20rpx;
    width: 120rpx;
    height: 40rpx;
    line-height: 40rpx;
    text-align: center;
    border: 2rpx solid #ff9800;
    border-radius: 8rpx;
    color: #ff9800;
    font-size: 20rpx;
}
.dct-myProject-contentBox {
    width: 600rpx;
    font-size: 28rpx;
    margin: 20rpx 0;
    /* 超出两行自动换行 */
    display: -webkit-box;
    -webkit-line-clamp: 2; /* 限制在一个块元素显示的文本的行数 */
    -webkit-box-orient: vertical; /* 垂直排列 */
    overflow: hidden;
    text-overflow: ellipsis;
    word-break:break-all;
    line-height: 1.4;
}
/*  */
.dct-messBox-item {
    margin-right: 20rpx;
    margin-bottom: 10rpx;
    font-size: 24rpx;
    line-height: 2;
}
.dct-messBox-item  .dct-messBox__value {
    min-width: 56rpx;
    max-width: 202rpx;
    height: 50rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.dct-messBoxBtn {
    margin-left: 40rpx;
    line-height: 100rpx;
}