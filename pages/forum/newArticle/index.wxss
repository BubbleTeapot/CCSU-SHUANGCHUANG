/* 主题编辑 */
.nat-content {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    overflow: hidden;
}
.nat-editBox {
    border: 2rpx solid #BBB;
    margin: 40rpx;
    padding: 10rpx 30rpx;
    border-radius: 6rpx;
}
.topic-contentinput {
    font-size: 28rpx;
    padding: 6rpx 4rpx;
}
.topic-content{
    font-size: 26rpx;
    color: #000;
    padding: 8rpx 6rpx;
}
.placeholderTopic {
    font-size: 26rpx;
    color: #666;
}
.nat-saveArticleBox {
    position: fixed;
    right: 40rpx;
    bottom: 40rpx;
    left: 40rpx;
}
textarea  {
    height: 80rpx;
}