/* 加载组件 */
/* 字体 */
@import '../../../static/iconFonts/fonts/iconfont.wxss';

.hidden {
    display: none !important;
}
/* 遮罩 */
.shade {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: rgba(0, 0, 0, 0);
}
/* loadingBox */
.loadingBox {
    width: 220rpx;
    height: 220rpx;
    padding: 40rpx 30rpx 30rpx;
    box-sizing: border-box;
    border-radius: 12rpx;
    background-color: rgba(0, 0, 0, .4);
}
/* 加载的图标 */
.ldg-header {
    text-align: center;
    /* 动画名称 时间 播放次数(循环)*/
    animation: rotateMove 0.9s linear infinite;
}
.iconLoading {
    font-size: 60rpx;
    color: #ccc;
}
/* 加载的内容 */
.ldg-content {
    margin-top: 30rpx;
    font-size: 28rpx;
    text-align: center;
    color: #efefef;
}
/* 动画 */
@keyframes rotateMove {
    0% { transform: rotate(0deg); }
    25% { transform: rotate(90deg); }
    50% { transform: rotate(180deg); }
    75% { transform: rotate(270deg); }
    100% { transform: rotate(360deg); }
}